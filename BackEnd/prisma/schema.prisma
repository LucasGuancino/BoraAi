generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int    @id @default(autoincrement())
  nome           String
  sobrenome      String
  telefone       String
  ra             Int    @unique
  senha          String
  confirmarSenha String

  @@map("users")
}

model carona{
  id             Int      @id @default(autoincrement())
  end_origem     String
  hr_saida       DateTime
  hr_chegada     DateTime
  met_pagamento  String

  @@map("carona")
}

model veiculo{
  id             Int      @id @default(autoincrement())
  user           User     @relation(fields: [userId],references: [id])
  nome_veiculo   String
  placa_veiculo  String
  desc_veiculo   String

  @@map("veiculo")   
}